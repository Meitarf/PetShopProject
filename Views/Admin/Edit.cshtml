@model PetShopProject.Models.Animal
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        <form class="form" method="post" enctype="multipart/form-data">
            <br>
            @Html.HiddenFor(a => a.ID)
            @Html.LabelFor(model => model.Name)
            <input type="text" asp-for="Name" value="@Model.Name" /> <br>
            @Html.LabelFor(model => model.Age)
            <input type="text" asp-for="Age" value="@Model.Age" /> <br>
            @Html.LabelFor(model => model.Description)
            <input type="text" asp-for="Description" value="@Model.Description" /> <br>
            <label for="CategoryID">Category </label>
            <select class="select" asp-for="CategoryID">
                <option value="1">Mammal</option>
                <option value="2">Bird</option>
                <option value="3">Fish</option>
            </select>
            <br />
            <label for="PictureName">Add a Picture </label>
            <input name="imageFile" asp-for="PictureName" type="file" accept="image/*" />
            <br />
            <input class="submit" type="submit" value="Submit" asp-action="EditPost" />
            <div>
                @Html.ValidationSummary()
            </div>
        </form>
    </div>
</body>
    </html>